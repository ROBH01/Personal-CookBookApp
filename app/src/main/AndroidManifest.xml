        <activity
            android:name=".ShoppingListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecipeSpecificationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SavedRecipesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BrowseAllActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BrowseRecipesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecoverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LogInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>